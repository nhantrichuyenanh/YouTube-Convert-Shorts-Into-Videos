{
  "manifest_version": 3,
  "name": "YouTube Convert Shorts Into Videos",
  "version": "1.0.5",
  "author": "Nhân Trí",
  "homepage_url": "https://github.com/nhantrichuyenanh/YouTube-Convert-Shorts-Into-Videos",
  "description": "Converts /shorts/ into /watch?v= on YouTube.",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png",
    "128": "icon.png",
    "256": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
        "gecko": {
            "id": "{dde4f5cd-a87e-42f1-bda3-f53d61c82b3f}",
            "strict_min_version": "140.0",
            "data_collection_permissions": {"required": ["none"]}
        }
  }
}
